<!DOCTYPE html>
<html>
  <head>
    <title>BetterThanAirbnbApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless notice.blank? %>
      <%= notice %>
    <% end %>
    <% unless alert.blank? %>
      <%= alert %>
    <% end %>

    <%= yield %>
  </body>
</html>
